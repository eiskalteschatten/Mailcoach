{
  "name": "mailcoach",
  "version": "0.1.0",
  "main": "./dist/src/server.js",
  "engines": {
    "node": ">=13.6.0"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "copyfiles \"./src/**/*.njk\" ./dist",
    "dev": "NODE_ENV=development ts-node-dev -r tsconfig-paths/register --respawn --transpileOnly --inspect -- src/server.ts",
    "prestart": "node ./dist/src/bootstrap.js",
    "start": "node ./dist/src/server.js",
    "test": "NODE_ENV=test NODE_CONFIG_DIR=./config jest --watch --verbose .",
    "test:single": "NODE_ENV=test NODE_CONFIG_DIR=./config jest --watch --verbose",
    "test:ci": "npm run lint && NODE_ENV=test NODE_CONFIG_DIR=./config jest .",
    "sendCoverage": "cat ./test-coverage/lcov.info | CODACY_PROJECT_TOKEN=$(grep CODACY_PROJECT_TOKEN .env | cut -d '=' -f2) codacy-coverage",
    "lint": "eslint './**/*.{ts,js}'"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "bootstrap": "^4.3.1",
    "compression": "^1.7.4",
    "config": "^3.2.5",
    "cookie-parser": "~1.4.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "log4js": "^6.1.0",
    "mkdirp": "^1.0.3",
    "moment": "^2.20.1",
    "pg": "^7.17.1",
    "sequelize": "^5.21.3",
    "sequelize-migration-wrapper": "^0.1.1",
    "symlink-dir": "^3.1.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/config": "0.0.34",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^25.1.0",
    "@types/mkdirp": "^0.5.2",
    "@types/node": "^11.13.18",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "copyfiles": "^2.2.0",
    "eslint": "^5.16.0",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^1.3.1",
    "jest": "^25.1.0",
    "superagent": "^5.2.1",
    "supertest": "^4.0.2",
    "ts-jest": "^25.0.0",
    "ts-node": "^8.3.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint"
    }
  }
}
