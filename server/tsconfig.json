{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": false,
    "target": "es6",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@mc/logger": [ "lib/logger" ],
      "@mc/lib/*": [ "lib/*" ],
      "@mc/interfaces/*": [ "interfaces/*" ],
      "@mc/modules/*": [ "modules/*" ]
    }
  },
  "include": [
    "src/**/*.ts",
    "config/**/*.js"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts"
  ]
}
